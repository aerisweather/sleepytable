//-------------
// - Plugins  -
//-------------
//Sorting Plugin
@sort0: #F7F7F7;
@sort1: #FFFFFF;
@sort2: #D8D8D8;
@sortIconOffset: 0px;
@sortTextColor: #222;

@sortActive0: lighten(#5e8cba, 10%);
@sortActive1: #5e8cba;
@sortActive2: darken(#5e8cba, 10%);
@sortIconOffsetActive: -16px;
@sortTextColorActive: #FFF;

//Filter
@filter0: #D0D0D0;
@filter1: #F7F7F7;
@filter2: #FFFFFF;

//Pager
@pagerBorderColor: #CCC;
@pagerBackgroundColor: #EEE;
@pagerTextColor: #222;

@pagerBorderColorHover: @sort0;
@pagerBackgroundColorHover: lighten(@sort0, 30%);
@pagerTextColorHover: @sort0;

@pagerBorderColorDisabled: #DDD;
@pagerBackgroundColorDisabled: #EEE;
@pagerTextColorDisabled: #CCC ;

@import "../main.less";
// Plugins - Feel free to comment out the ones you aren't using.
@import "../sort.less";
@import "../filter.less";
@import "../pager.less";